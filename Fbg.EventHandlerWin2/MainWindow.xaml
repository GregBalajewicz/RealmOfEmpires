<Window x:Class="Fbg.EventHandlerWin2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Event Handler v2" Height="350" Width="525" Closing="Window_Closing">
    <Grid>       
        <Grid.RowDefinitions>
            <RowDefinition Height="0*" />
            <RowDefinition Height="0*" />
            <RowDefinition Height="0*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="201*" />
        </Grid.RowDefinitions>
        
        <TabControl Grid.Row="5" Name="tabs"></TabControl>
        <Button Content="Start / ReInit ALL" Grid.Row="3"  Height="23" HorizontalAlignment="Left" Name="StartReInit" VerticalAlignment="Top" Width="100" Click="StartReInit_Click"  />
        <Button Content="Stop / Start current tab's event handler" Grid.Row="3" Height="23"  Name="Stop" VerticalAlignment="Top" Width="250"  Click="Stop_Click" />
        <Button Content="clear list" Grid.Row="3" Height="23"  Name="clearlist" VerticalAlignment="Top" Width="70"  Click="clearlist_Click" Margin="420,0,12,0" />
    </Grid>
</Window>
